<!-- include header file -->
<%-include('./partials/header.ejs') %>
 
<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5 ">
            <h2 class="alert alert-success text-center" role="alert">Add New Student</h2>
            <!-- Form -->
            <form method="POST">

                <!-- Name -->
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" name="name" autofocus="off">
                </div>
                
                 <!-- Age -->
                 <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="text" class="form-control" id="age" name="age">
                  </div>

                    <!-- Fees -->
                 <div class="mb-3">
                    <label for="fees" class="form-label">Fees</label>
                    <input type="text" class="form-control" id="fees" name="fees">
                  </div>

                <button type="submit" class="btn btn-primary">Submit</button>
              </form>

        </div>

        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-primary text-center" role="alert">List Of Students</h2>
            <%# Show All Data %>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Fees</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                   <% var i=1 %>
                    <% marks.forEach((value)=>{ %>
                        <tr>
                            <td> <%= i++ %></td>
                            <td> <%= value.name %>  </td>
                            <td> <%= value.age %>   </td>
                            <td> <%= value.fees %>  </td>
                            <td>
                                <form action="/student/edit/<%= value._id %>" method="get" class="d-inline">
                                    <button type="submit" class="btn">
                                        <i class="fas fa-pen-square text-info"></i>
                                    </button>
                                </form>

                                <form action="/student/delete/<%= value._id %>" method="post" class="d-inline">
                                    <button type="submit" class="btn">
                                        <i class="fas fa-trash text-danger"></i>
                                    </button>
                                </form>
                                <!--  -->
                            </td>
                        </tr>
                    <%})%>
                </tbody>
            </table>
            
        </div>
    </div>
</div>


 <!-- include footer -->
 <%-include('./partials/footer.ejs') %>